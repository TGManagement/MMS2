@model MMSystem.Models.Merch

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Merch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MerchId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" asp- />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MerchTypeId" class="control-label"></label>
                <select asp-for="MerchTypeId" class="form-control" asp-items="ViewBag.MerchTypeId">Merchandise Type</select>
                <span asp-validation-for="MerchTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SizeId" class="control-label">Size</label>
                <select asp-for="SizeId" class="form-control" asp-items="ViewBag.SizeId">Size</select>
                <span asp-validation-for="SizeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                $<input asp-for="Price" class="form-control" type="text" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label">Status</label>
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusIdName" onchange="Warning()"></select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@(Model.PictureUrl)" style="max-height:200px;max-width:200px;" />
                <span asp-validation-for="PictureUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureUrl" class="control-label">Upload</label>
                <input id="PictureUpload" type="file" asp-for="PictureUrl" style="height:40px" />
            </div>
            <div class="form-group">
                <label asp-for="UpdatedOn" class="control-label"></label>
                <label class="control-label">@(Convert.ToDateTime(Model.UpdatedOn).ToShortDateString())</label>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        <script>
            function Warning() {
                alert('Depending on your selection, you could delete all listed replicas/prints');
            }
        </script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
}
